<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
	<Dialog resizable="true" id="details_dialog" class="sapUiContentPadding"  afterClose="onClose">
	<!--	<content>-->
			
				<core:Icon src="sap-icon://decline" press="handleShowDialogClose" ></core:Icon>
				
		 	<Table id="details" items="{/}">
						<columns>
							<Column width="1em">
								<Text text="NotifNo"/>
							</Column>
							<Column width="1em">
								<Text text="Equipment"/>
							</Column>
							<Column width="1em">
								<Text text="Start of Malfunction Date"/>
							</Column>
							<Column width="1em">
								<Text text="Plangroup"/>
							</Column>
							<Column width="1em">
								<Text text="CreatedAt"/>
							</Column>
							<Column width="1em">
								<Text text="ChangedBy"/>
							</Column>
							<Column width="1em">
								<Text text="Function Location"/>
							</Column>
								<Column width="1em">
								<Text text="Sortfield"/>
							</Column>
							<!--Sortfield-->
							<Column width="1rem" >
								<Text text="Details"/>
							</Column>
							<Column minScreenWidth="1370px" demandPopin="true" visible="true"/>
						</columns>
						<items >
							<ColumnListItem>
								<cells>
									<Text text="{NotifNo}"/>
									<Text text="{Equipment}"/>
									<Text text="{path:'Strmlfndate',type:'sap.ui.model.type.Date',formatOptions:{source:{pattern:'yyyy/MM/dd'}}}"/>
									<Text text="{Plangroup}"/>
									<Text text="{ path:'CreatedAt', type: 'sap.ui.model.type.Time', formatOptions: { source: { pattern: 'KK:mm:ss a' }}}"/>
									<Text text="{ChangedBy}"/>
									<Text text="{FunctLoc}"/>
										<Text text="{Sortfield}"/>
									<!--<core:Icon src="sap-icon://expand"  press="onFragment" ></core:Icon>-->
									<Button text ="More"  type="Default" press="onMoreDet"/>
											</cells>
											</ColumnListItem>
										
										</items>
										</Table>
				
